{
  "name": "@org/better-auth-effect",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "Effect layer for Better Auth with Kysely/Postgres",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json",
    "./*": "./src/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucas-barake/rpc-tutorial.git",
    "directory": "packages/better-auth-effect"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "check": "tsc -b tsconfig.json",
    "migrate": "dotenv -e ../../.env tsx ./scripts/migrate.ts"
  },
  "dependencies": {
    "better-auth": "^1.3.24",
    "kysely": "^0.27.3",
    "pg": "8.13.1",
    "effect": "*"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  },
  "devDependencies": {
    "@types/pg": "^8.11.11"
  }
}
